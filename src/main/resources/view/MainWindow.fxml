<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="400.0" minWidth="300.0"
            prefHeight="600.0" prefWidth="420.0"
            style="-fx-background-color: #f5f5f5;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="kiki.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    vvalue="1.0"
                    fitToWidth="true"
                    style="-fx-background: #f5f5f5; -fx-background-color: #f5f5f5; -fx-border-color: transparent;"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="52.0">
            <content>
                <VBox fx:id="dialogContainer"
                      spacing="8"
                      style="-fx-padding: 10 10 10 10; -fx-background-color: #f5f5f5;" />
            </content>
        </ScrollPane>

        <HBox spacing="0"
              style="-fx-background-color: #ffffff; -fx-border-color: #dddddd; -fx-border-width: 1 0 0 0;"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              prefHeight="52.0">
            <children>
                <TextField fx:id="userInput"
                           onAction="#handleUserInput"
                           promptText="Type a message..."
                           style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-size: 13px; -fx-padding: 10 12 10 12;"
                           HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton"
                        mnemonicParsing="false"
                        onAction="#handleUserInput"
                        text="Send"
                        style="-fx-background-color: #5b5ea6; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 0; -fx-padding: 20 18 20 18; -fx-cursor: hand;" />
            </children>
        </HBox>
    </children>
</AnchorPane>
